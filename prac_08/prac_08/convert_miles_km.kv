<MilesConverter>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            spacing: 5

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Label:
        id: output_label
        font_size: 48
        text: root.output_km
        color: (1, 1, 0, 1)

MilesConverter: